# Local dev (copy to .env.development or .env.local)
VITE_API_BASE=http://localhost:5050
VITE_SOCKET_URL=http://localhost:5050


PORT = 5050
MONGODB_URI= <mongo connection string>


DASHBOARD_API_KEY=<API key for server authentication>
VITE_DASHBOARD_API_KEY=<Exposed to frontend; use for API requests from browser>


OPENAI_API_KEY=<OpenAI API key (required for AI insights)>
ENABLE_AI_INSIGHTS=<Enable/disable AI insight generation (true/false, default: true)>
INSIGHT_MODEL=<OpenAI model to use (default: gpt-5.2)

INSIGHT_TIMEOUT_MS=<Timeout for insight generation in milliseconds (default: 12000)>
INSIGHT_RETRIES=<Number of retries for insight generation (default: 2)>
AI_INSIGHT_SAMPLE_RATE=<Fraction of traces to generate insights for (0-1, default: 1; e.g., 0.25 = 25%)>
AI_INSIGHT_SAMPLE_ERRORS_ONLY=<Only sample traces with errors (true/false, default: false)>

AI_RATE_LIMIT_WINDOW_MS=<Rate limit window in milliseconds (default: 60000)>
AI_RATE_LIMIT_MAX=<Max AI requests per window (default: 20)>



DEFAULT_TENANT_ID=<Default tenant ID if not specified in headers (default: `local`)>
VITE_TENANT_ID=local

TENANTS_JSON= <JSON string of tenant configurations: e.g., {"local": {"apps": {<app_name>: <app_key>}}}>